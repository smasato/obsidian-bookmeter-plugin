{
  "include": ["src/**/*.ts", "webpack.config.ts"],
  "exclude": ["node_modules/*"],
  "compilerOptions": {
    "types": ["node"],
    "baseUrl": "./",
    "paths": {
      "src": ["src/*"],
      "~/*": ["src/*"]
    },
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
}
