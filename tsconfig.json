{
  "include": ["src/**/*.ts", "webpack.config.ts"],
  "exclude": ["node_modules/*"],
  "compilerOptions": {
    "lib": ["es2017"],
		"target": "es2017",
    "types": ["node"],
    "baseUrl": ".",
    "declaration": true,
		"declarationDir": "types",
    "paths": {
      "src": ["src/*"],
      "~/*": ["src/*"]
    },
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
}
